                  <ContentControl.Content>
                    <Image Width="32" Height="32" SnapsToDevicePixels="True">
                      <FrameworkElement.Style>
                        <Style TargetType="{x:Type Image}">
                          <Setter Property="Stretch" Value="Uniform" />
                          <Setter Property="Source" Value="images/tool-memo@2x.png" />
                          <Style.Triggers>
                            <DataTrigger Value="True" Binding="{Binding ElementName=NoteButtonInListBoxNew, Path=IsChecked}">
                              <Setter Property="Source" Value="images/tool-memo@2x.png" />
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </FrameworkElement.Style>
                    </Image>
                  </ContentControl.Content>
                </RadioButton>
                <TextBlock Text="有便利貼" FontSize="16" Foreground="#FFFFFFFF" Margin="0,15,3,0" FontFamily="新細明體" />
              </StackPanel>
              <RadioButton Name="HideListBoxButton" GroupName="ListBoxGroup" Margin="0, 5,0,0" ToolTip="{Binding hideThumbnails, Source={StaticResource Resources}}" Click="HideListBoxButton_Checked">
                <ContentControl.Content>
                  <Image Width="24" Height="24" SnapsToDevicePixels="True">
                    <FrameworkElement.Style>
                      <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="images/ReadWindow/btn_hide.png" />
                        <Style.Triggers>
                          <DataTrigger Value="關閉縮圖總覽" Binding="{Binding ElementName=HideListBoxButton, Path=ToolTip}">
                            <Setter Property="Source" Value="images/ReadWindow/btn_close.png" />
                          </DataTrigger>
                        </Style.Triggers>
                      </Style>
                    </FrameworkElement.Style>
                  </Image>
                </ContentControl.Content>
              </RadioButton>
            </StackPanel>
          </Grid>
          <Grid Name="thumbNailListBoxGD">
            <ListBox Name="thumbNailListBox" ScrollViewer.IsDeferredScrollingEnabled="False" VirtualizingStackPanel.VirtualizationMode="Recycling" VirtualizingStackPanel.IsVirtualizing="True" Height="150" Style="{DynamicResource ListBoxStyle}" SelectionChanged="thumbNailListBox_SelectionChanged">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <VirtualizingStackPanel />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </ListBox>
          </Grid>
        </StackPanel>
      </StackPanel>
    </Canvas>
    <RadioButton Name="ShowListBoxButton" GroupName="ShowListBoxMode" HorizontalAlignment="Left" Margin="15, 0, 0, 15" VerticalAlignment="Bottom" ToolTip="{Binding showThumbnails, Source={StaticResource Resources}}" Click="ShowListBoxButton_Click">
      <ContentControl.Content>
        <Image Width="24" Height="24" Source="images/ReadWindow/btn_14.png" SnapsToDevicePixels="True" />
      </ContentControl.Content>
    </RadioButton>
    <RadioButton Name="LockButton" GroupName="LockMode" IsChecked="False" Width="0" Visibility="Collapsed" Margin="0, 0, 15, 15" HorizontalAlignment="Right" VerticalAlignment="Bottom" Uid="RadioButton_1" ToolTip="{Binding locklock, Source={StaticResource Resources}}" Click="LockButton_Checked">
      <ContentControl.Content>
        <Image Width="24" Height="24" SnapsToDevicePixels="True">
          <FrameworkElement.Style>
            <Style TargetType="{x:Type Image}">
              <Setter Property="Source" Value="images/ReadWindow/btn_07.png" />
              <Style.Triggers>
                <DataTrigger Value="True" Binding="{Binding ElementName=LockButton, Path=IsChecked}">
                  <Setter Property="Source" Value="images/ReadWindow/btn_07_over.png" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </FrameworkElement.Style>
        </Image>
      </ContentControl.Content>
    </RadioButton>
    <DocumentViewer Name="DV" Visibility="Collapsed" Style="{DynamicResource DocumentViewerStyle1}" />
  </Grid>
</Window>